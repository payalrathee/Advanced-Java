<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.connection.driver.class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/demo</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection,password">payal</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="use_sql_comments">true</property>
		<mapping class="beans.Student"></mapping>
		<mapping class="beans.ABC"></mapping>
		<mapping class="beans.Question"></mapping>
		<mapping class="beans.Answer"></mapping>
		<mapping class="beans.Trainer"></mapping>
		<mapping class="beans.Trainee"></mapping>
		<mapping class="beans.Project"></mapping>
		<mapping class="beans.Employee"></mapping>
	</session-factory>
</hibernate-configuration>